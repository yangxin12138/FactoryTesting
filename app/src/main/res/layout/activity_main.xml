<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp">
            <TextView
                android:id="@+id/wifi_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wifi测试:"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/wifi_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="wifi6测试"
                android:layout_toEndOf="@+id/wifi_title"
                android:layout_marginStart="10dp"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/ip_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ip:"
                android:textSize="20sp"
                android:layout_toEndOf="@+id/wifi_name"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/wifi_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待测试"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:textSize="20sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp">
            <TextView
                android:id="@+id/bluetooth_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="蓝牙测试:"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/bluetooth_mac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0.0.0"
                android:layout_toEndOf="@+id/bluetooth_title"
                android:layout_marginStart="10dp"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/bluetooth_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索到0个设备"
                android:layout_toEndOf="@+id/bluetooth_mac"
                android:layout_marginStart="10dp"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/bluetooth_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待测试"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:textSize="20sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp">
            <TextView
                android:id="@+id/speaker_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="speaker测试:"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/speaker_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人工判断"
                android:layout_toEndOf="@+id/speaker_title"
                android:layout_marginStart="10dp"
                android:textSize="20sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp">
            <TextView
                android:id="@+id/key_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="按键测试:"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/key_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请点击ok键"
                android:layout_toEndOf="@+id/key_title"
                android:layout_marginStart="10dp"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/key_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试成功"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:textSize="20sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp">
            <TextView
                android:id="@+id/USB_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USB测试:"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/USB_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="wifi6测试"
                android:layout_toEndOf="@+id/USB_title"
                android:layout_marginStart="10dp"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/USB_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试成功"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:textSize="20sp"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/right_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>